{
  "version": "2",
  "templates": [
    {
      "type": 1,
      "title": "Fire Dynamics Simulator (FDS) 6.7.6",
      "description": "Fire Dynamics Simulator (FDS) is a large-eddy simulation (LES) code for low-speed flows.",
      "note": "Supports parallel computation with MPI and OpenMP",
      "categories": ["fds", "simulation"],
      "platform": "linux",
      "logo": "https://www.nist.gov/sites/default/files/images/2022/03/09/Fire%20Safety%20Story.png",
      "registry": "docker",
      "image": "ap/fds-6.7.6:latest",
      "interactive": true,
      "name": "fds-6.7.6",
      "hostname": "fds",
      "env": [
        {
          "name": "MPI",
          "label": "Number of MPI Processes",
          "default": "1"
        },
        {
          "name": "OMP_NUM_THREADS",
          "label": "Number of OpenMP Threads",
          "default": "1"
        },
        {
          "name": "FDS_FILE_PATH",
          "label": ".fds exact file path",
          "default": "/files/THE_FDS_FILE_NAME.fds"
        }
      ],
      "volumes": [
        {
          "container": "/workdir",
          "bind": "/stockage/internal/YOUR_USERNAME/FDS_FOLDER",
          "readonly": false
        },
        {
          "container": "/files",
          "bind": "",
          "readonly": false
        }
      ],
      "network": "none",
      "restart_policy": "no",
      "privileged": false
    },
    {
      "type": 1,
      "title": "OpenFoam 2306",
      "description": "OpenFOAM CFD software for fluid flow and heat transfer simulation",
      "note": "V0.5 - Supports parallel computation",
      "categories": ["openfoam", "simulation"],
      "platform": "linux",
      "logo": "https://alternative.me/media/256/gnu-octave-icon-zxbh5s33l9r6r1bo-c.png",
      "registry": "docker",
      "image": "ap/openfoam:latest",
      "interactive": true,
      "name": "openfoam-2306",
      "hostname": "openfoam",
      "env": [
        {
          "name": "MPI",
          "label": "Number of MPI Processes",
          "default": "4"
        },
        {
          "name": "MODE",
          "label": "Mode/Solver",
          "default": "interFoam"
        },
        {
          "name": "ARGUMENTS",
          "label": "Additional command arguments",
          "default": "-parallel"
        },
        {
          "name": "ZIP_ARCHIVE_INPUT",
          "label": "Input .zip file path (case sensitive)",
          "default": "OpenFoam/damBreak_Finer_4mpi"
        }
      ],
      "volumes": [
        {
          "container": "/workdir",
          "bind": "",
          "readonly": false
        }
      ],
      "network": "none",
      "restart_policy": "no",
      "privileged": false
    }
  ]
}
